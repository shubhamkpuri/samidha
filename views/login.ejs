<% include partials/header %>
<% include partials/navbar %>
<div style="height: 50px;"></div>
<div id="wrapper" style="color: white; padding-top: 50px;">
  <div class="section ">
    <div class="container">



      <div class="row m-lg-5 text-center" id="login" style="color:#006266; min-height:75vh;">
        <div class="col-lg-4 bg-dark  p-3">
          <h1> Login</h1>
          <h1> <a href="#signup"  id ="signUpAppear" class="btn btn-success"><i class="fa fa-user-plus"></i> Don't have an account</a> </h1>
        </div>

        <div class="col-lg-8 p-lg-5 p-sm-3 bg-light">
          <div class="table-bordered p-2 rounded">
            <form action="/login" method="POST">
              <div class="form-group">
                <%# <label for="username">Email:</label> %>
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1"><i class="fa fa-user-circle"></i></span>
                  </div>
                  <input type="email" autofocus name="email" class="form-control" placeholder="Username" aria-describedby="basic-addon1" required="true">
                                            </div>
                </div>
                <div class="form-group">
                  <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon2"><i class="fa fa-eye-slash"></i></span>
                    </div>

                    <input type="password" name="password" placeholder="Password" class="form-control" aria-describedby="basic-addon2" required="true">
                                        </div>
                  </div>
                  <button class="btn btn-success"><i class="fa fa-unlock"></i> LogIn</button>
            </form>
          </div>
        </div>
      </div>
      <div class="row m-lg-5 text-center d-none" id="signup" style="color:#006266; min-height:75vh;">
        <div class="col-lg-4 bg-dark  p-3">
          <h1> SignUp</h1>
          <h1> <a href="#login" id ="logInAppear" class="btn btn-success"><i class="fa fa-unlock"></i> Already have account</a> </h1>
        </div>
        <div class="col-lg-8 p-lg-5 p-sm-3 bg-light">
          <div class="table-bordered p-2 rounded">
            <form action="/register" method="POST">

              <div class="form-group">
                <div class="input-group mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon3"><i class="fa fa-user-circle"></i></span>
                  </div>
                  <input type="text" name="fname" class="form-control"  aria-describedby="basic-addon3" placeholder="FirstName " required="true">
                                        </div>
                </div>
                <div class="form-group">
                  <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="basic-addon3"><i class="fa fa-user-circle"></i></span>
                    </div>
                    <input type="text" name="lname" class="form-control"  aria-describedby="basic-addon3" placeholder="Last Name " required="true">
                                        </div>
                  </div>
                  <div class="form-group">
                    <div class="input-group mb-3">
                      <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon4"><i class="fa fa-envelope"></i></span>
                      </div>
                      <input type="email" name="email" class="form-control"  aria-describedby="basic-addon4" placeholder="Email" required="true">
                                        </div>
                    </div>
                    <div class="form-group">
                      <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text" id="basic-addon4"><i class="fa fa-envelope"></i></span>
                        </div>
                        <input type="text" name="address" class="form-control"  aria-describedby="basic-addon4" placeholder="Address" required="true">
                                        </div>
                      </div>
                      <div class="form-group">
                        <div class="input-group mb-3">
                          <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon4"><i class="fa fa-envelope"></i></span>
                          </div>
                          <input type="text" name="profileImage" class="form-control"  aria-describedby="basic-addon4" placeholder="Profile Image Link" required="true">
                                        </div>
                        </div>

                        <div class="form-group">
                          <div class="input-group mb-3">
                            <div class="input-group-prepend">
                              <span class="input-group-text" id="basic-addon5"><i class="fa fa-eye-slash"></i></span>
                            </div>

                            <input type="password" name="password" minlength="4" placeholder="Password"  aria-describedby="basic-addon5" class="form-control" required="true">
                                        </div>
                          </div>
                          <button class="btn btn-success"><i class="fa fa-user-plus"></i> Sign Up</button>
            </form>

          </div>
        </div>
      </div>
    </div>

    <% include partials/footercontent %>
    <script src="js/js.js">

    </script>
    <% include partials/footer %>
